<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f8fa"
    tools:context=".MainActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.wuta.demo.MyView
        android:layout_width="500dp"
        android:layout_height="1000dp"
        android:id="@+id/myview"
        lw:textSize="20px"
        lw:textColor="#FF4081">
    </com.wuta.demo.MyView>
    <Button
        android:id="@+id/switcher"
        android:layout_gravity="bottom"
        android:text="change"
        android:layout_y="0dip"
        android:layout_x="0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save"
        android:layout_gravity="center_vertical"
        android:text="save"
        android:layout_y="520dip"
        android:layout_x="0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/crop"
        android:text="crop"
        android:layout_y="520dip"
        android:layout_x="150dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/restart"
        android:layout_gravity="bottom|right"
        android:text="restart"
        android:layout_y="520dip"
        android:layout_x="300dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Resolution"
        android:layout_gravity="top|right"
        android:text="Resolution"
        android:layout_y="0dip"
        android:layout_x="280dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/takephoto"
        android:layout_gravity="top|center"
        android:text="takephoto"
        android:layout_y="0dip"
        android:layout_x="150dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/v"
        android:layout_y="400dip"
        android:layout_x="50dip"
        android:textSize="60px"
        android:textColor="#bb1515"></TextView>


</AbsoluteLayout>
